root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.{js, ts}]
insert_final_newline = true
indent_size = 4

[*.{sass}]
insert_final_newline = false
indent_size = 4

[*.{css,scss}]
insert_final_newline = true
indent_size = 4

[*.{md,yml,php}]
insert_final_newline = true
indent_size = 4
