{% extends '::layout.html.twig' %}

{% block title %}{{ post.metaTitle }}{% endblock %}
{% block description %}{{ post.metaDescription }}{% endblock %}

{% block article %}
    <h1>{{ post.title }}</h1>

    公開日: {% if post.publishedAt %}{{ post.publishedAt|date('Y-m-d H:i:s') }}{% endif %}
    更新日: {% if post.updatedAt %}{{ post.updatedAt|date('Y-m-d H:i:s') }}{% endif %}

    <div>
        {{ post.content|nl2br|raw }}
    </div>

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}

{% block referenceLink %}
    <aside>
        {# 参考リンク #}
    </aside>
{% endblock %}

{% block relatedLink %}
    <aside>
        {# 関連記事 #}
    </aside>
{% endblock %}

{% block aroundLink %}
    <aside>
        {# 前後記事リンク #}
    </aside>
{% endblock %}

{% block commentsList %}
    <aside>
        {# コメント一覧 #}
    </aside>
{% endblock %}

{% block commentsPost %}
