{% if posts %}
  <div class="columns is-multiline">
    {% for post in posts %}

      <div class="column is-half">

        <div class="card is-fullwidth">
          <div class="card-image">
            <figure class="image is-4by3">
              <img src="http://placehold.it/300x225" alt="">
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-12"><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></p>
              </div>
              <div class="media-content">
                <small>{{ post.publishedAt|date('Y.m.d') }}</small>
                <small>@starlod_twtr</small>
                <small><i class="fa fa-folder-open-o" aria-hidden="true"></i>PHP</small>
              </div>
            </div>

            <div class="content">
              {{ post.content|slice(0, 100) }}
            </div>
          </div>
        </div>
      </div>

    {% endfor %}
  </div>
{% else %}
  <p>新しい投稿はありません。</p>
{% endif %}
