{# コメントフォーム #}

<div id="commentForm">
  <div class="tabs is-boxed">
    <ul>
      <li class="is-active">
        <a>
          <span class="icon is-small"><i class="fa fa-comment"></i></span>
          <span>コメント</span>
        </a>
      </li>
      <li>
        <a>
          <span class="icon is-small"><i class="fa fa-file-powerpoint-o"></i></span>
          <span>プレビュー</span>
        </a>
      </li>
    </ul>
  </div>

  <div id="tabContent" class="container">
    {{ form_start(commentForm) }}
    <p class="control">
      <input class="input" type="text" placeholder="名前">
    </p>
    <p class="control has-icon has-icon-right">
        <input class="input is-danger" type="text" placeholder="Email input" value="hello@">
        <i class="fa fa-warning"></i>
        <span class="help is-danger">This email is invalid</span>
    </p>
    <p class="control">
      <textarea class="textarea" placeholder="コメント"></textarea>
    </p>
    <p class="control">
      <button class="button is-primary">Submit</button>
      <button class="button is-link">Clear</button>
    </p>
    {{ form_end(commentForm) }}
  </div>
</div>
